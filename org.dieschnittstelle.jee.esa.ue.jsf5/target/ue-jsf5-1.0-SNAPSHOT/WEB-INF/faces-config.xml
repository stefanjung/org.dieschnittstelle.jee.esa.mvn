<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">
  <application>
  	<!--  we do not use any special settings here, but do the whole configuration via annotations -->
  </application>
  <!--  declare a phase listener that logs the processig phases -->
  <lifecycle>
      <phase-listener>org.dieschnittstelle.jee.esa.ue.jsf5.LoggingPhaseListener</phase-listener>
  </lifecycle>  
</faces-config>
